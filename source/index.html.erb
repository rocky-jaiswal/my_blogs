<% data.blog.articles[0...5].each_with_index do |article, i| %>
  <article class="<%= (i == 0) ? 'first' : '' %>">
    <h1 class="highlighted">
      <a class="bree-citric" href="<%= article.url %>"><%= article.title %></a> 
      <span class="head-date"><%= article.date.strftime('%b %e %Y') %></span>
    </h1>
    
    <%= article.summary %>
    
    <div class="more"><a href="<%= article.url %>">read on &raquo;</a></div>
  </article>
  <hr/>
<% end %>