    <a href="/videos">Videos</a>
  </h3>
  <hr/>
  <h3><a id="show-posts" href="#/posts">Posts</a> / <a id="show-tags" href="#/tags">Tags</a></h3>
  <div class="posts">
    <ol>
      <% blog.articles.each do |article| %>
        <li><a href="<%= article.url %>"><%= article.title %></a> <span><%= article.date.strftime('%b %e %Y') %></span></li>
      <% end %>
    </ol>
  </div>
  <div class="tags">
    <ol>
      <% blog.tags.each do |tag, articles| %>
        <li><a href="<%= tag_path tag %>"><%= tag %> (<%= articles.size %>)</a></li>
      <% end %>
    </ol>
  </div>
  <hr/>
</div>

